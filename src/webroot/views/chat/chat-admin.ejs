<!DOCTYPE html>
<head>
  <!-- Standard Meta -->
  <meta charset="utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">

  <!-- Site Properities -->
  <title><%= title %></title>

  <link rel="stylesheet" type="text/css" href="/stylesheets/semantic.css">

  <script src="/javascripts/jquery-2.0.3.js"></script>
  <script src="/javascripts/semantic.min.js"></script>
  <script src="/javascripts/socket.io-1.0.6.js"></script>

</head>
<body>

<%- include ../base/header.ejs %>

<div class="ui small form segment">
    <div class="chat-content" style="overflow: auto;height:300px;max-height: 300px;">
    </div>
</div>
<div class="ui form">
    <div class="field">
        <label>请输入内容，当前收听人数：<i id="user-count">0</i></label>
        <textarea style="height: 50px;" id="message" placeholder="请输入两天内容..."></textarea>
    </div>
</div>
<div class="ui blue small submit button" onclick="send();">发送消息</div>


<!--聊天室相关-->
<script src="/javascripts/chat-admin.js"></script>
<script style="text/javascript">
    function send(){
        var message = $("#message").val();
        AdminSender.send(message);
    }

</script>
</body>

</html>
