<body>

<%- include ../base/header.ejs %>

<div class="ui warning form segment">
  <form id="analysis-form" action="/analysis" method="post" enctype="multipart/form-data">
    <div class="ui warning message">
        <div class="header">选择要测试的api文件!</div>
        <ul class="list">
            <li>选择json格式的api测试文件</li>
        </ul>
    </div>
    <!--<div class="field">-->
        <!--<label>项目名称</label>-->
        <!--<input placeholder="默认项目" type="text">-->
    <!--</div>-->
    <div class="field">
        <label>API文件</label>
        <input placeholder="选择配置文件" type="file" name="file" multiple="multiple">
    </div>
    <div class="ui blue submit button" onclick="inputSubmit();">Submit</div>
  </form>
</div>

<script type="text/javascript">
   function inputSubmit(){
       if($("input[name=file]").val() == ""){
           alert("请选择API配置文件！");
           return ;
       }
       $("#analysis-form").submit();
       return false;
   }
</script>

</body>

